# ── Red Bricks Laravel API ─────────────────────────────────
REDBRICKS_API_URL=https://api.redbricksdata.com

# ── Platform Supabase (Central tenant database) ───────────
PLATFORM_SUPABASE_URL=
PLATFORM_SUPABASE_SERVICE_KEY=

# ── Encryption (must match template's KEY_ENCRYPTION_SECRET) ──
KEY_ENCRYPTION_SECRET=  # 64-char hex string (32 bytes). Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# ── Supabase Management API (auto-provisioning) ───────────
SUPABASE_MANAGEMENT_TOKEN=  # Organization-level access token from supabase.com/dashboard/account/tokens
SUPABASE_ORG_ID=            # Organization ID to create projects in
SUPABASE_DEFAULT_REGION=us-east-1

# ── Vercel (domain management) ────────────────────────────
VERCEL_TOKEN=
VERCEL_TEAM_ID=
VERCEL_PROJECT_ID=  # The template's Vercel project ID (for domain aliases)

# ── App ────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3100
NEXT_PUBLIC_TEMPLATE_DOMAIN=red-bricks.app  # Base domain for agent subdomains
